# based on https://github.com/workadventure-xce/workadventure-xce/blob/xce/.env.template 
DEBUG_MODE= {{ workadventure.debug_mode }}
JITSI_URL= {{ jitsi_url }}
# If your Jitsi environment has authentication set up, you MUST set JITSI_PRIVATE_MODE to "true" and you MUST pass a SECRET_JITSI_KEY to generate the JWT secret
{% if jitsi.private_mode = true %}
JITSI_PRIVATE_MODE=true
JITSI_ISS= {{ jitsi.iss }}
SECRET_JITSI_KEY= {{ jitsi.secret_key }}
{% else %}
JITSI_PRIVATE_MODE=false
{% endif %}

ADMIN_API_TOKEN= {{ workadventure.api_token }}


START_ROOM_URL= {{ workadventure.start_room }}

# If your Turn server is configured to use the Turn REST API, you should put the shared auth secret here.
# If you are using Coturn, this is the value of the "static-auth-secret" parameter in your coturn config file.
# Keep empty if you are sharing hard coded / clear text credentials.
TURN_STATIC_AUTH_SECRET= {{ turn_auth  }}

DISABLE_NOTIFICATIONS= {{ notifications }}
SKIP_RENDER_OPTIMIZATIONS= {{ render_optimations }}

# The email address used by Let's encrypt to send renewal warnings (compulsory)
ACME_EMAIL= {{ acme_mail }}

MAX_PER_GROUP= {{ workadventure.max_group }} # default 4
MAX_USERNAME_LENGTH= {{ workadventure.username_length }} #default 8

OPID_CLIENT_ID= {{ op.client.id }}
OPID_CLIENT_SECRET= {{ op.client.secret }}
OPID_CLIENT_ISSUER= {{ op.client.issuer }}
OPID_CLIENT_REDIRECT_URL= {{ op.client.redirect_url }}
OPID_LOGIN_SCREEN_PROVIDER=http://pusher.workadventure.localhost/login-screen
OPID_PROFILE_SCREEN_PROVIDER= {{ op.screen.profile }}
DISABLE_ANONYMOUS= {{ op.disable_anonymous }}

# If you want to have a contact page in your menu, you MUST set CONTACT_URL to the URL of the page that you want
CONTACT_URL=  {{ workadventure.contact_url }}
